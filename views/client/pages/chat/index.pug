extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-3
    .row
      .col-12
        +box-head("Chat")

    .row
      .col-12
        .chat(my-id=user.id)
          //- .inner-head
          //-   .inner-avatar EY
          //-   .inner-name Em Yêu
          .inner-body
             each chat in chats
              div(class=(user.id == chat.user_id ? "inner-outgoing" : "inner-incoming"))
                if(user.id != chat.user_id)
                  .inner-name #{chat.userFullName}
                .inner-content
                  | #{chat.content}
            //- .inner-outgoing
            //-   .inner-content
            //-     | Thế à? Ok e iu
            //- .inner-incoming
            //-   .inner-name Em Yêu
            //-   .inner-content
            //-     | Nhanh nha nhanh nha
            //- .inner-outgoing
            //-   .inner-content
            //-     | Ck đến rồi mà thấy ai ở nhà đâu e? Khóa cửa mà :(
            //- .inner-incoming
            //-   .inner-name Em Yêu
            //-   .inner-content
            //-     | Thì em bảo nhà e không ai ở nhà mà :))
          .inner-foot
            form(
              class="inner-form"
              action=""
            )
              input(
                type="text"
                placeholder="Nhập nội dung..."
                name="content"
              )
              span(class="button-icon btn btn-light mx-2")
                i(class="fa-regular fa-face-smile")
              button
                  i.fa-solid.fa-paper-plane

  div(class="tooltip" role="tooltip")
    emoji-picker(class="light")